<Application
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone" xmlns:System="clr-namespace:System;assembly=mscorlib" 
    x:Class="CardapioWP7.App"
    >

    <!--Application Resources-->
    <Application.Resources>
        <Style x:Key="AbaDiaDaSemana" TargetType="ContentControl">
            <Setter Property="Margin" Value="27,28,27,0"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
        <Style x:Key="Pratos" TargetType="TextBlock">
            <Setter Property="Margin" Value="12,0,0,0"/>
        </Style>
        <System:String x:Key="AppName">Cardápio Restaurante Universitário UFRN</System:String>
    </Application.Resources>

    <Application.ApplicationLifetimeObjects>
        <!--Required object that handles lifetime events for the application-->
        <shell:PhoneApplicationService 
            Launching="Application_Launching" Closing="Application_Closing" 
            Activated="Application_Activated" Deactivated="Application_Deactivated"/>
    </Application.ApplicationLifetimeObjects>

</Application>